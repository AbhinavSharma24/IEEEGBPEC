<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homepage"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".Activities.MainActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:src="@drawable/ieeelogo"
            android:id="@+id/ieeelogo"
            android:padding="20dp"
            android:layout_height="200dp"/>

    <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="#1C327C"
            android:layout_marginTop="-43dp"
            android:textStyle="bold"
            android:textSize="29sp"
            android:text="IEEE GBPEC Student Branch"
            android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_marginTop="25dp"
            android:id="@+id/card1"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="100dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/icon_events"
                android:layout_height="100dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="Events"
                android:textStyle="bold"
                android:layout_marginLeft="-55dp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:padding="16dp"
            android:id="@+id/card2"
            android:layout_marginTop="20dp"
            android:layout_below="@id/card1"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="100dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/icon_achievements"
                android:layout_height="100dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="Achievements"
                android:textStyle="bold"
                android:layout_marginLeft="-15dp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:id="@+id/card3"
            android:layout_below="@id/card2"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="100dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/icon_projects"
                android:layout_height="100dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="Projects"
                android:textStyle="bold"
                android:layout_marginLeft="-40dp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:id="@+id/card4"
            android:layout_below="@id/card3"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="100dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/icon_ieee"
                android:layout_height="100dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="About IEEE"
                android:textStyle="bold"
                android:layout_marginLeft="-35dp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:id="@+id/card5"
            android:layout_below="@id/card4"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="95dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/icon_resources"
                android:layout_height="95dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="IEEE Resources"
                android:textStyle="bold"
                android:layout_marginLeft="-10dp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>
</ScrollView>
