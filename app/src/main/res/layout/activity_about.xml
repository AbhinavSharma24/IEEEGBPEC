<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".Activities.AboutActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:id="@+id/appBarLayout"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                app:contentScrim="@color/colorPrimary"
                app:title="About"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/connect"
                    android:scaleType="centerCrop"
                    android:layout_height="190dp"/>

            <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:id="@+id/toolbar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                    android:layout_height="?attr/actionBarSize"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:src="@drawable/ic_menu_share"
            android:id="@+id/share_app"
            android:backgroundTint="#8F3131"
            android:tint="#FFFFFF"
            app:layout_anchor="@id/appBarLayout"
            app:layout_anchorGravity="bottom|end|right"
            android:layout_marginEnd="25dp"
            android:layout_height="wrap_content"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:id="@+id/background"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:ignore="PrivateResource">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="Connect with us"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="15dp"
                    android:textSize="22sp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">


                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_height="50dp"
                            android:src="@drawable/website2"
                            android:layout_width="50dp"
                            android:padding="8dp"/>

                    <TextView
                            android:text="Visit our website"
                            android:textSize="16sp"
                            android:id="@+id/website"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_height="50dp"
                            android:src="@drawable/facebook"
                            android:layout_width="50dp"
                            android:padding="8dp"/>

                    <TextView
                            android:text="Like us on Facebook"
                            android:textSize="16sp"
                            android:id="@+id/facebook"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_height="50dp"
                            android:src="@drawable/instagram"
                            android:layout_width="50dp"
                            android:padding="8dp"/>

                    <TextView
                            android:text="Follow us on Instagram"
                            android:textSize="16sp"
                            android:id="@+id/instagram"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_height="50dp"
                            android:src="@drawable/twitter"
                            android:layout_width="50dp"
                            android:padding="8dp"/>

                    <TextView
                            android:text="Follow us on Twitter"
                            android:textSize="16sp"
                            android:id="@+id/twitter"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:text="App Developed By :-"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/mr_monstar"
                    android:textSize="24sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:text="ABHINAV SHARMA"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView android:layout_width="40dp"
                           android:src="@drawable/gmail"
                           android:id="@+id/abhinav_gmail"
                           android:layout_marginRight="10dp"
                           android:layout_gravity="center"
                           android:layout_height="40dp"/>

                <ImageView android:layout_width="40dp"
                           android:src="@drawable/github"
                           android:id="@+id/abhinav_github"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:layout_gravity="center"
                           android:layout_height="40dp"/>

                <ImageView android:layout_width="45dp"
                           android:src="@drawable/linkedin"
                           android:id="@+id/abhinav_linkedin"
                           android:layout_marginLeft="10dp"
                           android:layout_gravity="center"
                           android:layout_height="45dp"/>

            </LinearLayout>

            <TextView
                    android:text="*** Copyrights belong to IEEE GBPEC ***"
                    android:layout_marginTop="50dp"
                    android:textColor="#111"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="*** All rights reserved ***"
                    android:layout_gravity="center"
                    android:textColor="#111"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>